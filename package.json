{
  "name": "mallorca-exclusive-app",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./src/data/datocms_data_de.json ./src/data/datocms_data_en.json",
    "restart": "npm run clean && npm run fetch-data",
    "start": "npm run fetch-data && concurrently \"tailwindcss -i ./src/css/tailwind.css -o ./_site/css/style.css --watch\" \"eleventy --serve\"",
    "build": "npm run fetch-data && tailwindcss -i ./src/css/tailwind.css -o ./_site/css/style.css --minify && eleventy",
    "fetch-data": "node src/data/datocms_de.js && node src/data/datocms_en.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "dotenv": "^16.4.5",
    "markdown-it": "^14.1.0",
    "node-fetch": "^2.7.0",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.15",
    "concurrently": "^9.0.1",
    "tailwindcss": "^3.4.12"
  }
}
